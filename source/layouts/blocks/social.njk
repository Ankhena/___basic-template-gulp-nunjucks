<ul class="social">
  {% for item in social %}
    <li class="social__item">
      <a class="social__link social__link--{{ item.prefix }}" href="{{ item.link }}" title="{{ item.title }}" style="--icon: url('../icons/stack.svg#{{ item.icon }}')">
        <span class="visually-hidden">{{ item.title }}</span>
      </a>
    </li>
  {% endfor %}
</ul>
